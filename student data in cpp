
#include <iostream>
#include <string>
using namespace std;

class MyClass {       // The class
  public:             // Access specifier
    int roll;         // Attribute (int variable)
    string name;      // Attribute (string variable)
};

int main() {
  MyClass myObj;  // Create an object of MyClass

  // Access attributes and set values
  myObj.roll = 15;
  myObj.name = "Ben";

  // Print values
  cout << myObj.roll << "\n"; 
  cout << myObj.name; 
  return 0;
}

